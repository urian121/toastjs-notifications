{
  "name": "toastjs-notifications",
  "version": "1.16.0",
  "description": "Una librería moderna, ligera y elegante para notificaciones toast en aplicaciones web. Incluye animaciones suaves, múltiples posiciones y diseño responsive.",
  "main": "dist/toast-notifications.min.js",
  "files": [
    "toastjs-notifications.js",
    "toast-notifications.css",
    "dist/toast-notifications.min.js",
    "dist/toast-notifications.min.css"
  ],
  "unpkg": "dist/toast-notifications.min.js",
  "jsdelivr": "dist/toast-notifications.min.js",
  "unpkgCss": "dist/toast-notifications.min.css",
  "jsdelivrCss": "dist/toast-notifications.min.css",
  "keywords": [
    "toast",
    "notifications",
    "ui",
    "alerts",
    "popup",
    "notification-system",
    "toast-notifications",
    "javascript",
    "vanilla-js",
    "frontend",
    "web-components",
    "user-interface",
    "ux",
    "ui-components",
    "browser",
    "lightweight",
    "zero-dependencies",
    "responsive",
    "modern-ui"
  ],
  "author": "Urian Viera",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urian121/toastjs-notifications.git"
  },
  "scripts": {
    "build:prepare": "node -e \"require('fs').mkdirSync('dist', {recursive: true})\"",
    "build:js": "npm run build:prepare && terser toastjs-notifications.js -c toplevel=true,pure_funcs='console.log' -m -o dist/toast-notifications.min.js",
    "build": "npm run build:js && npm run build:css",
    "build:css": "npm run build:prepare && cleancss -o dist/toast-notifications.min.css toast-notifications.css",
    "build:all": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "homepage": "https://toastjs-notifications.vercel.app",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "terser": "^5.41.0"
  }
}
